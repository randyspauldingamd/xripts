function tofw11() {
  if [ $# -eq 0 ]; then
    echo "Usage: tofw11 <path to>/<file>"
    return
  fi

  base_name=$(basename $1)
  scp $1 rspauldi@10.227.26.223:~/xfer/${base_name}
}
